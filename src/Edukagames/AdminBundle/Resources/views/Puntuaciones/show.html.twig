
{% extends '::index.html.twig' %}

{% block content %}

<div class="accordion" id="accordion3">
	{% for juego in juegos %}
	<div class="accordion-group">
		<div class="accordion-heading">
			<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion3" href="#{{ juego.nombre }}">
				{{ juego.nombre }}
	      	</a>
	    </div>
	    <div id="{{ juego.nombre }}" class="accordion-body collapse">
			<div class="accordion-inner">
				<table class = "table table-striped table-condensed" cellspacing="0">
					<thead>
						<tr>
							<th>Nivel</th>
							<th>Fase</th>
							<th>Puntos</th>
							<th>Aciertos</th>
							<th>Tiempo</th>
						</tr>
					</thead>
					<tbody>
						{% for puntuacion in puntuaciones %}
							{% for punt in puntuacion %}
								{% if punt.juego.nombre == juego.nombre %}
									<tr>
										<td>{{ punt.nivel }}</td>
										<td>{{ punt.fase }}</td>
										<td>{{ punt.puntos }}</td>
										<td>{{ punt.aciertos }}</td>
										<td>{{ punt.tiempo }}</td>
									</tr>
								{% endif %}
							{% endfor %}
						{% endfor %}
				</tbody>
				</table>
			</div>			
	    </div>
	</div>
	{% endfor %}
 </div>

 {% endblock %}
 
 
 
