<div class="accordion" id="accordion3">
	{% for juego in juegos %}
	<div class="accordion-group">
		<div class="accordion-heading">
			<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion3" href="#{{ juego.nombre | replace({' ':''}) }}">
				{{ juego.nombre }}
	      	</a>
	    </div>
	    <div id="{{ juego.nombre | replace({' ':''}) }}" class="accordion-body collapse">
			<div class="accordion-inner">
				<table class = "table table-striped table-condensed" cellspacing="0">
					<thead>
						<tr>
							<th>Dificultad</th>
							<th>Fecha</th>
							<th>Puntos</th>
							<th>Aciertos</th>
							<th>Fallos</th>
							<th>Tiempo</th>
						</tr>
					</thead>
					<tbody>
						{% for puntuacion in puntuaciones %}
							{% for punt in puntuacion %}
								{% if punt.juego.nombre == juego.nombre %}
									<tr>
										<td>{{ punt.Dificultad }}</td>
										<td>{{ punt.Fecha | date () }}</td>
										<td>{{ punt.Puntos }}</td>
										<td>{{ punt.Aciertos }}</td>
										<td>{{ punt.Fallos }}</td>
										<td>{{ punt.Tiempo }}</td>
									</tr>
								{% endif %}
							{% endfor %}
						{% endfor %}
				</tbody>
				</table>
			</div>			
	    </div>
	</div>
	{% endfor %}
 </div>