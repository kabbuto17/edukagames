{% extends '::index.html.twig' %}
{% block content %}
<h1>Profesor edit</h1>

<form action="{{ path('profesor_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {% if not(edit_form.getVars().valid)  %}
 	   <div id="errors" class="alert alert-error"> 
 		{{ form_errors(edit_form) }}
 	   	{{ form_errors(edit_form.nombre) }}
 		{{ form_errors(edit_form.password.Contrasena) }}
 		{{ form_errors(edit_form.password.Repita_contrasena) }} 
	   </div>
	{% endif %}
  	{{ form_widget(edit_form.nombre, { 'attr': {'placeholder': 'Nombre'} }) }}<br />
	{{ form_widget(edit_form.password.Contrasena, { 'attr': {'placeholder': 'Password'} }) }}
	{{ form_widget(edit_form.password.Repita_contrasena, { 'attr': {'placeholder': 'Repita el password'} }) }} <a id="tooltip" href="#" rel="tooltip" title="Si dejas las contraseñas en blanco no se modificaran."><i class="icon-info-sign"></i></a>
    {{ form_widget(edit_form._token) }}
    <p>
    	<button type="submit">Editar</button>
	</p>
</form>
<form action="{{ path('profesor_delete', { 'id': entity.id }) }}" method="post">
	{{ form_widget(delete_form) }}
	<button class="btn btn-danger" type="submit" onclick="return confirm('¿Esta seguro que desea eliminarlo?')">Borrar</button>
</form>
<a href="{{ path('profesor') }}">
	<i class="icon-arrow-left"></i> Volver a la lista
</a>

<script type="text/javascript">
$(document).ready(function () {
    $("#tooltip").tooltip({
      'selector': '',
      'placement': 'right'
    });
  });
</script>
{% endblock %}