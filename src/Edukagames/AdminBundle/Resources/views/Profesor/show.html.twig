{% extends '::index.html.twig' %}
{% block content %}

<h1>{{ entity.nombre }}</h1>

<table class="table table-striped table-condensed" cellspacing="0">
 	<thead>
        <tr>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ entity.nombre }}</td>
            <td>
		        <form action="{{ path('profesor_delete', { 'id': entity.id }) }}" method="post">
		            {{ form_widget(delete_form) }}
		            <a href="{{ path('profesor_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i></a>
		            <button class="btn btn-link" type="submit" onclick="return confirm('¿Esta seguro que desea eliminarlo?')"><i class="icon-remove"></i></button>
		        </form>
            </td>
        </tr>
    </tbody>
</table>

<a href="{{ path('profesor') }}">
	<i class="icon-arrow-left"></i> Volver a la lista
</a>
{% endblock %}
