<h1>Informes de {{ alumno.nombre }}</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Informe</th>
            <th>Fecha</th>
            <th>Descripci√≥n</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for informe in informes %}
        <tr>
            <td>{{ informe.nombreInforme }}</td>
            <td>{% if informe.fecha %}{{ informe.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ informe.descripcion }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('informe_show', { 'id': informe.id }) }}">Mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('informe_update', { 'id': informe.id }) }}">Editar</a>
                    </li>
                    <li>
                    	<a href="{{ path('informe_delete', { 'id': informe.id }) }}">Eliminar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('informe_new', {'id' : alumno.id}) }}">
            Nuevo informe
        </a>
