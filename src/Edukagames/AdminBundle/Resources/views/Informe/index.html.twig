<a href="{{ path('informe_new', {'id' : alumno.id}) }}"><i class="icon-plus"></i> Nuevo informe</a>
<table class="table table-striped table-condensed" cellspacing="0">
    <thead>
        <tr>
            <th>Informe</th>
            <th>Fecha</th>
            <th>Descripcion</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for informe in informes %}
        <tr>
            <td><i class="icon-download"></i> <a target="_blank" href="{{ asset('uploads/'~informe.alumno.id~'/informes/'~informe.nombreInforme ) }}">{{ informe.nombreInforme }}</td>
            <td>{% if informe.fecha %}{{ informe.fecha|date('d-m-Y') }}{% endif %}</td>
            <td>{{ informe.descripcion }}</td>
            <td>
				<a href="{{ path('informe_show', { 'id': informe.id }) }}"><i class="icon-eye-open"></i></a>
				<a href="{{ path('informe_update', { 'id': informe.id }) }}"><i class="icon-pencil"></i></a>
				<a href="{{ path('informe_delete', { 'id': informe.id }) }}"><i class="icon-remove"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
