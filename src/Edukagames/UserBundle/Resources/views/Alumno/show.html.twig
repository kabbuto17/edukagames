<div class="row-fluid">
	<div class="span2">
		{% if(entity.foto != "defaultprofile.png") %}
			<img alt="" src="{{ asset('uploads/'~entity.id~'/img/'~entity.foto) }}">
		{% else %}
			<img alt="" src="{{ asset('uploads/'~entity.foto) }}">
		{% endif %}
	</div>
	<div class="span4">
		<table class="table table-striped table-condensed">
		    <tbody>
		        <tr>
		            <th>Nombre</th>
		            <td>{{ entity.nombre }}</td>
		        </tr>
		        <tr>
		            <th>Apellidos</th>
		            <td>{{ entity.apellidos }}</td>
		        </tr>
		        <tr>
		            <th>Curso</th>
		            <td>{{ entity.curso }}</td>
		        </tr>
		        <tr>
		            <th>Fecha de nacimiento</th>
		            <td>{{ entity.fechaNacimiento|date('d-m-Y') }}</td>
		        </tr>
		        <tr>
		            <th>Edad</th>
		            <td>{{ entity.getEdad() }} a&ntilde;os</td>
		        </tr>
		        <tr>
		            <th>Username</th>
		            <td>{{ entity.userName }}</td>
		        </tr>
		    </tbody>
		</table>
		        <a class="btn" href="{{ path('alumno_edit', { 'id': entity.id }) }}">
		            <i class="icon-pencil"></i> Editar Alumno
		        </a>
		        <form action="{{ path('alumno_delete', { 'id': entity.id }) }}" method="post">
		            {{ form_widget(delete_form) }}
		            <button class="btn btn-danger" type="submit" onclick="return confirm('¿Esta seguro que desea eliminarlo?')"><i class="icon-remove"></i> Borrar Alumno</button>
		        </form>
	</div>
	<div class="span6">
	<table class="table">
		<thead>
			<tr>
            	<th>Diagnostisco</th>
            </tr>
		</thead>
		<tbody>
	        <tr>
	            <td>{{ entity.diagnostico }}</td>
	        </tr>
		</tbody>
	</table>

	</div>
</div>
<div class="row-fluid">
	<div class="span5">
		<h2>Ultimas Puntuaciones</h2> 
		{% render 'AdminBundle:Puntuaciones:UltimasPuntuaciones' with {'id': entity.id} %}
	</div>
	<div class="span7">
		<h2>Ultimos Informes</h2>
		{% render 'AdminBundle:Informe:index' with {'id': entity.id, 'count':5} %}
	</div>
</div>

