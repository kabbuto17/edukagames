<div class="row-fluid">
<div class="span4">
{% if(entity.foto != "defaultprofile.png") %}
	<img alt="" src="{{ asset('uploads/'~entity.id~'/img/'~entity.foto) }}">
{% else %}
	<img alt="" src="{{ asset('uploads/'~entity.foto) }}">
{% endif %}
</div>
<div class="span8">
<table class="record_properties">
    <tbody>
        <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>
        <tr>
            <th>Apellidos</th>
            <td>{{ entity.apellidos }}</td>
        </tr>
        <tr>
            <th>Diagnostico</th>
            <td>{{ entity.diagnostico }}</td>
        </tr>
        <tr>
            <th>Curso</th>
            <td>{{ entity.curso }}</td>
        </tr>
        <tr>
            <th>Fechanacimiento</th>
            <td>{{ entity.fechaNacimiento|date('d-m-Y') }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ entity.userName }}</td>
        </tr>
    </tbody>
</table>
</div>
</div>
<div class="row-fluid">
	<div class="span6">
		<h2>Ultimas Puntuaciones</h2> 
		Falta por desarrollar...
	</div>
	<div class="span6">
		<h2>Ultimos Informes</h2>
		{% render 'AdminBundle:Informe:index' with {'id': entity.id, 'count':3} %}
	</div>
</div>
<ul class="record_actions">
    <li>
        <a href="{{ path('alumno_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('alumno_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
