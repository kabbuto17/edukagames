		   	<div id="success" class="modal alert alert-success fade in">
			    <div class="modal-header">
					<button data-dismiss="modal" class="close">&times;</button>
				    <h3>Success!</h3>
			    </div>
			    <div class="modal-body">
				    <p>{{ flashMessage }}</p>
			    </div>
		    </div>
		    <script type="text/javascript">$('#success').modal({show: 'true'});</script>
		{% endfor %}
    	<header>
	    	{% block header %}
	    		{% include '::header.html.twig' %}
	    	{% endblock %}
    	</header>
			{% block body %}{% endblock %}
        <footer class="container navbar-fixed-bottom">
	        {% block footer %}
	        	{% include '::footer.html.twig' %}
	        {% endblock %}
        </footer>
        {% block javascripts %}{% endblock %}
		
    </body>
</html>
