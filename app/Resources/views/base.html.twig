<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> 
<html lang="es">
    <head>
    	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('bundles/user/css/bootstrap.min.css') }}" type="text/css" /> 
    	<script src="{{ asset('bundles/user/js/jquery-1.8.3.js') }}" type="text/javascript"></script>
		<script src="{{ asset('bundles/user/js/bootstrap.min.js') }}" type="text/javascript"></script>
        {% block stylesheets %}
        {% endblock stylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="container">
    {% for flashMessage in app.session.flashbag.get('success') %}
	   	<div id="success" class="modal alert alert-success fade in">
		    <div class="modal-header">
				<button data-dismiss="modal" class="close">&times;</button>
			    <h3>Exito!</h3>
		    </div>
		    <div class="modal-body">
			    <p>{{ flashMessage }}</p>
		    </div>
	    </div>
	    <script type="text/javascript">$('#success').modal({show: 'true'});</script>
	{% endfor %}

    	<header>
	    	{% block header %}
	    		{% include '::header.html.twig' %}
	    	{% endblock %}
    	</header>
    	
		{% block body %}{% endblock %}
			
        <footer class="container navbar-fixed-bottom" style="background: none repeat scroll 0% 0% white;">
	        {% block footer %}
	        	{% include '::footer.html.twig' %}
	        {% endblock %}
        </footer>
    </body>
</html>
